# Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# App Configuration
NEXT_PUBLIC_APP_NAME=Hookah+
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_ENV=development

# Site Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_NAME=Hookah+ Dashboard
NEXT_PUBLIC_SITE_DESCRIPTION=Your command center for flavor, flow, and loyalty intelligence

# Reflex Scoring Configuration
NEXT_PUBLIC_REFLEX_SCORE_THRESHOLD=92
NEXT_PUBLIC_REFLEX_ENABLE_ONBOARDING=true
NEXT_PUBLIC_REFLEX_LOG_LEVEL=info

# API Configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost:3000/api
NEXT_PUBLIC_API_TIMEOUT=30000

# Authentication (if applicable)
# NEXT_PUBLIC_AUTH_DOMAIN=your-auth-domain
# NEXT_PUBLIC_AUTH_CLIENT_ID=your-client-id

# Database (if applicable)
# DATABASE_URL=postgresql://username:password@localhost:5432/hookahplus

# External Services
# NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
# STRIPE_SECRET_KEY=sk_test_...
# NEXT_PUBLIC_TWILIO_ACCOUNT_SID=your-twilio-sid
# TWILIO_AUTH_TOKEN=your-twilio-token

# Analytics
# NEXT_PUBLIC_PLAUSIBLE_DOMAIN=your-domain.com
# NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Monitoring & Logging
# NEXT_PUBLIC_SENTRY_DSN=https://...
# LOG_LEVEL=info

# Feature Flags
NEXT_PUBLIC_ENABLE_REFLEX_PANEL=true
NEXT_PUBLIC_ENABLE_ONBOARDING_FLOW=true
NEXT_PUBLIC_ENABLE_CI_CD_INTEGRATION=true

# Development Tools
NEXT_PUBLIC_ENABLE_DEBUG_MODE=false
NEXT_PUBLIC_ENABLE_HOT_RELOAD=true
