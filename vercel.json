{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/apps/web"
    },
    {
      "src": "/demo-flow",
      "dest": "/apps/web/demo-flow"
    },
    {
      "src": "/fire-session-dashboard",
      "dest": "/apps/dashboard/fire"
    },
    {
      "src": "/preorder/(.*)",
      "dest": "/apps/preorder/$1"
    },
    {
      "src": "/admin/(.*)",
      "dest": "/apps/admin/$1"
    }
  ],
  "functions": {
    "apps/*/app/api/**/*.ts": {
      "runtime": "nodejs18.x",
      "maxDuration": 30
    }
  },
  "env": {
    "NODE_ENV": "production"
  }
}
